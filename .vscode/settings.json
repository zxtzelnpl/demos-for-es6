{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/bower_components": true,
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true
  },
  "editor.tabSize": 2, // 为了符合eslint的两个空格间隔原则
  "eslint.enable": true, // 是否开启eslint
  "eslint.options": {
    "config-file": "/.eslintrc.js" // eslint配置文件
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}